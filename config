SCRIPTS=/home/rijad/.config/i3blocks/scripts/

# Get wifi state

[memory]
command=$SCRIPTS/memoryusage
interval=10
label= 

[disk]
command=$SCRIPTS/diskusage
interval=3600
label= 

[ethernet]
label= 
command=$SCRIPTS/ethernet
INTERFACE=enp4s0f1
interval=10

[wifi]
label= 
command=$SCRIPTS/wifi
INTERFACE=wlp3s0
interval=10
separator_block_width=21

[weather]
command=$SCRIPTS/weather
interval=3600

[datetime]
label= 
interval=1
command=$SCRIPTS/datetime

[settings]
full_text=
short_text=
interval=0
command=$SCRIPTS/settings
